<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền và viền ngoài -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Nền xám nhạt -->
            <corners android:radius="10dp" /> <!-- Bo góc -->
            <stroke android:width="3dp" android:color="#000000" /> <!-- Viền đen -->
        </shape>
    </item>

    <!-- Phần chưa được lấp đầy -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu trắng cho phần chưa được lấp đầy -->
            <corners android:radius="10dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Phần đã lấp đầy -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFCDD2" /> <!-- Màu thanh tiến trình -->
                <corners android:radius="10dp" /> <!-- Bo góc -->
            </shape>
        </clip>
    </item>
</layer-list>
